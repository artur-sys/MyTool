import requests

def verificar_vazamento(email):
    url = f"https://haveibeenpwned.com/api/v3/breachedaccount/{email}"
    headers = {
        "hibp-api-key": "sua_chave_api_aqui",  # Obtenha uma chave API gratuita no site
        "User -Agent": "ViolationToolEthical"
    }
    response = requests.get(url, headers=headers)

    if response.status_code == 200:
        vazamentos = response.json()
        print(f"O e-mail {email} foi exposto nos seguintes vazamentos:")
        for vazamento in vazamentos:
            print(f"- {vazamento['Name']} ({vazamento['BreachDate']})")
    elif response.status_code == 404:
        print(f"O e-mail {email} n√£o foi encontrado em vazamentos conhecidos.")
    else:
        print(f"Erro ao verificar o e-mail: {response.status_code}")

def main():
    email = input("Digite o e-mail para verificar vazamentos: ")
    verificar_vazamento(email)

if __name__ == "__main__":
    main()