import random
import string

def gerar_senha_hacker(tamanho=12):
    # Definindo os caracteres que podem ser usados na senha
    caracteres = string.ascii_letters + string.digits + string.punctuation
    
    # Gerando a senha aleatória
    senha = ''.join(random.choice(caracteres) for _ in range(tamanho))
    
    return senha

# Exemplo de uso
tamanho_da_senha = 16  # Você pode ajustar o tamanho da senha
senha_gerada = gerar_senha_hacker(tamanho_da_senha)
print("Senha gerada:", senha_gerada)
